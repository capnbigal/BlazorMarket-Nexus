@using Nexus.Models

<a href="/blog/@Post.Slug" class="group block">
    <article class="bg-white rounded-lg overflow-hidden hover:shadow-md transition-shadow duration-300">
        <!-- Featured Image -->
        <div class="h-48 relative overflow-hidden bg-gray-100">
            <img src="https://picsum.photos/id/@(Post.Id + 10)/400/300" 
                 alt="@Post.Title" 
                 class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" 
                 loading="lazy" />
            <div class="absolute inset-0 bg-black/5 group-hover:bg-black/0 transition-colors duration-300"></div>
        </div>
        
        <!-- Content -->
        <div class="p-4">
            <!-- Title -->
            <h3 class="text-lg font-semibold text-nexus-dark mb-2 group-hover:text-nexus-blue transition-colors duration-200">
                @Post.Title
            </h3>
            
            <!-- Description -->
            <p class="text-gray-600 text-sm leading-relaxed">
                @Post.Excerpt
            </p>
        </div>
    </article>
</a>

@code {
    [Parameter, EditorRequired] public BlogPost Post { get; set; } = null!;
}